{
  "name": "yoti",
  "version": "3.8.0",
  "description": "Yoti NodeJS SDK for back-end integration",
  "author": "Yoti LTD <tech@yoti.com> (https://www.yoti.com/developers)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/getyoti/yoti-node-sdk.git"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "lint": "eslint *.js './src/**/*.js' './tests/**/*.spec.js' config/*.js './sandbox/**/*.js'",
    "unit-test": "jest",
    "test": "npm run lint && npm run unit-test",
    "coveralls": "npm run unit-test && cat ./coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./*.js",
      "./src/**/*.js",
      "./sandbox/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageDirectory": "./coverage"
  },
  "dependencies": {
    "base64-url": "^2.2.1",
    "node-forge": "^0.7.6",
    "node-rsa": "^1.0.3",
    "protobufjs": "^5.0.3",
    "safe-buffer": "^5.1.2",
    "superagent": "^3.8.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.7",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^21.27.2",
    "eslint-plugin-node": "6.0.1",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "nock": "^11.8.2"
  }
}
